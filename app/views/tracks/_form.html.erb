<%= auth_token %>

<% band = @track.band %>

Band: <%= band.name %><br><br>

<label for="album_title">Album:</label>
<select id="album_title" name="track[album_id]">

  <% band.albums.each do |album| %>
    <option value="<%= album.id %>"
      <%= 'selected' if album == @track.album %> >
      <%= album.title %>
    </option>
  <% end %>

</select>
<br><br>

<label for="track_title">Title:</label>
<input type="text" name="track[title]" value="<%=@track.title%>" id="album_title">
<br><br>


<input type="radio" name="track[bonus]" value="false"
      id="regular_track" <%= 'checked' if !@track.bonus?%>>
<label for="regular_track">Regular Track</label>
<input type="radio" name="track[bonus]" value="true"
      id="bonus_track" <%= 'checked' if @track.bonus%>>
<label for="bonus_track">Bonus Track</label>
<br><br>

<label for="lyrics">Lyrics:</label><br>
<textarea name="track[lyrics]" id="lyrics"
  value="<%=@track.lyrics%>"></textarea>
<br><br>
