<h1> Create a New Goal! </h1>

<form action="<%=goals_url%>" method="post">
  <%= auth_token %>

  <label>goal
    <input type="text" name="goal[body]" value="<%=@goal.body%>">
  </label>

  <br>

  <label>Public
  <input type="radio" name="goal[public]" value="true">
  </label>

  <br>

  <label>Private
  <input type="radio" name="goal[public]" value="false">
  </label>

  <button>Create Goal</button>
</form>
